    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.ActionBar">
        <item name="elevation">0dp</item>
        <item name="android:elevation" tools:ignore="NewApi">0dp</item>
        <!--<item name="android:height">@dimen/top_bar_height</item>-->
        <!--<item name="height">@dimen/top_bar_height</item>-->
        <item name="actionButtonStyle">@style/AppTheme.ActionButton</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <!--  顶部标题样式-->
    <style name="TextTopTittle">
        <item name="android:textColor">#222222</item>
        <item name="android:textSize">@dimen/topTitleTextSize</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxWidth">240dp</item>
        <item name="android:ellipsize">marquee</item>f
    </style>

    <!--  顶部标题样式-->
    <style name="actionMenuTextAppearance">
        <item name="android:textSize">15sp</item>
    </style>

    <!-- 透明背景的Dialog-->
    <style name="NoFrameDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:buttonStyle">@style/AppButton</item>
    </style>

    <style name="bottom_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.InputMethod</item>
    </style>

    <style name="AppProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint" tools:ignore="NewApi">@color/buttonDisableColor</item>
        <!--<item name="android:indeterminateTintMode" tools:ignore="NewApi">src_atop</item>-->
        <!--<item name="android:indeterminateDrawable">@drawable/loading</item>-->
        <item name="android:minHeight">66.66666dp</item>
        <item name="android:minWidth">66.66666dp</item>
        <item name="android:maxHeight">66.66666dp</item>
        <item name="android:maxWidth">66.66666dp</item>

    </style>


    <!-- 虚线 -->
    <style name="dashLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layerType" tools:ignore="NewApi">software</item>
        <item name="android:background">@drawable/dash_line</item>
    </style>


    <!-- 水平内容间分割线 -->

    <style name="horizontal_divider_line1">
        <item name="android:layout_height">@dimen/line_width1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/dividerLine1Color</item>
    </style>


    <!-- 竖直分割线 -->

    <style name="vertical_divider_line1">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/line_width1</item>
        <item name="android:background">@color/dividerLine1Color</item>
    </style>


    <style name="AppButton" parent="Widget.AppCompat.Button">
        <item name="android:stateListAnimator" tools:ignore="NewApi">@null</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <!-- -———————————————————————————————————————————————————————————————————————————————————————————————————— -->


    <style name="common_checkbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/common_checkbox_icon</item>
    </style>

    <style name="common_radiobutton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/common_checkbox_icon</item>
    </style>


    <!--一般表单信息中左侧名称-->

    <style name="common_form_label">
        <item name="android:textColor">@color/textColor_333333</item>
        <item name="android:textSize">15sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <!--一般表单信息中右侧输入栏-->
    <style name="common_form_editText">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/textColor_333333</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:textSize">15sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textCursorDrawable" tools:ignore="NewApi">@null</item>
    </style>


    <!-- 蓝色实心长按钮 -->
    <style name="common_btn_blue_long_round">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/common_btn_bg_blue_long_round</item>
        <item name="android:layout_height">@dimen/common_btn_long_height</item>
        <item name="android:layout_width">@dimen/common_btn_long_round_width</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
    </style>

    <!-- 蓝色实心长按钮 -->
    <style name="common_btn_blue_long_round_small">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/common_btn_bg_blue_long_round</item>
        <item name="android:layout_height">@dimen/common_btn_long_height1</item>
        <item name="android:layout_width">@dimen/common_btn_long_round_width1</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
    </style>

    <!-- 蓝色空心长按钮 -->
    <style name="common_btn_blue_long_round_no">
        <item name="android:textColor">@color/mainBlue_1A347F</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/common_btn_bg_blue_long_round_no</item>
        <item name="android:layout_height">@dimen/common_btn_long_height</item>
        <item name="android:layout_width">@dimen/dis75</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="common_btn_blue_long_rect">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/common_btn_bg_color_blue</item>
        <item name="android:layout_height">@dimen/common_btn_long_height</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="common_btn_red_long_rect">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/common_btn_bg_color_red</item>
        <item name="android:layout_height">@dimen/common_btn_long_height</item>
        <item name="android:layout_width">match_parent</item>
    </style>


    <!-- 自定义ActionSheet底部Dialog的样式 ，有模糊效果 -->
    <style name="ActionSheetDialogStyle" parent="@android:style/Theme.Dialog">
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>


</resources>
