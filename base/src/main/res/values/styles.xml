<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="AppTheme" parent="BaseAppTheme"/>


    <style name="AppTheme.FitsSystemWindows"/>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorControlHighlight</item>

        <item name="android:windowBackground">@color/windowBackgroundColor</item>

        <item name="android:actionBarStyle">@style/AppTheme.Toolbar</item>
        <item name="actionBarStyle">@style/AppTheme.Toolbar</item>
        <item name="actionButtonStyle">@style/AppTheme.ActionButton</item>
        <item name="actionBarSize">@dimen/top_bar_height</item>
        <item name="android:actionBarSize">@dimen/top_bar_height</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="actionMenuTextAppearance">@style/actionMenuTextAppearance</item>


        <item name="android:buttonStyle">@style/AppButton</item>

        <item name="alertDialogTheme">@style/AppTheme.AlertDialog</item>
        <item name="android:listDivider">@drawable/default_list_divider_line</item>

    </style>

    <style name="AppTheme.ActionButton" parent="Widget.AppCompat.ActionButton">
        <!--<item name="android:paddingLeft">12dp</item>-->
        <!--<item name="android:paddingRight">12dp</item>-->
        <item name="paddingStart">0dp</item>
        <item name="paddingEnd">@dimen/dis3</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">@dimen/dis3</item>
        <!--<item name="android:background">?attr/actionBarItemBackground</item>-->
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <!--<item name="android:scaleType">center</item>-->
        <!--<item name="android:gravity">center</item>-->
        <!--<item name="android:maxLines">2</item>-->
        <!--<item name="textAllCaps">@bool/abc_config_actionMenuItemAllCaps</item>-->

    </style>

    <style name="AppTheme.AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorControlHighlight</item>
        <item name="android:buttonStyle">@style/AppButton</item>

        <!--  dialog btn style -->
        <!--<item name="buttonBarStyle">@style/Widget.AppCompat.ButtonBar</item>-->
        <item name="buttonBarButtonStyle">@style/Widget.AppCompat.Button.ButtonBar.AlertDialog
        </item>
        <item name="buttonBarPositiveButtonStyle">?attr/buttonBarButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">
            @style/AppTheme.AlertDialog.ButtonBarNegativeButtonStyle
        </item>
        <item name="buttonBarNeutralButtonStyle">?attr/buttonBarButtonStyle</item>
    </style>

    <style name="AppTheme.AlertDialog.ButtonBarNegativeButtonStyle" parent="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/textColor_898989</item>
    </style>

    <style name="AppTheme.SplashBase">

    </style>

    <style name="AppTheme.UpDownAnimation">
        <item name="android:windowAnimationStyle">@style/UpDownAnimation</item>
        <!--<item name="android:windowAnimationStyle">@style/Animation.AppCompat.DropDownUp</item>-->
    </style>

    <style name="UpDownAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/come_in_b2t</item>
        <item name="android:windowExitAnimation">@anim/come_out_t2b</item>
    </style>


    <!--&lt;!&ndash;Navigation icon颜色设置&ndash;&gt;-->
    <!--<item name="drawerArrowStyle">@style/AppTheme.MyDrawerArrowStyle</item>-->
    <!--&lt;!&ndash;加入一個新的 navigation drarwer 的風格&ndash;&gt;-->
